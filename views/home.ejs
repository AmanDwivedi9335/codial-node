<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Home</title>
</head>
<body>
    <% if (locals.user){ %>
        <p>Hi, <%= locals.user.name %>, </p>
    <% } else{ %>
        <p>Please sign in to write your post -</p>
    <% } %>
    <section>
        <h4>Write your Posts here-</h4>
        <% if(locals.user){%>
            <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3"></textarea>
                <input type="submit" value = "Post">
            </form>
        <% } %>
        <div class="posts-view">
            <ul>
                <% for(post of posts){ %>

                    <%- include('_post') -%>

                <% } %>
            </ul>
        </div>
    </section>
    <section>
        <% if(locals.user){ %>
        <h3>Friends</h3>
        <% for(u of all_users){ %>
        <p>
            <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
        </p>
        <% } %>
        <% } else { %>
            <b>No Friends will be shown while you are sign out.</b>
        <% } %>
        
    </section>
    <script src="/js/home_posts.js"></script>
    
</body>
</html>